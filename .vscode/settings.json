{
  "spellright.language": ["en_US", "pl_PL"],
  "spellright.documentTypes": ["markdown", "plaintext", "latex"],
  "spellright.ignoreRegExps": ["/%.*/"],
  "spellright.latexSpellParameters": [
    "author",
    "title",
    "subtitle",
    "date",
    "chapter",
    "section\\*?",
    "subsection\\*?",
    "subsubsection\\*?",
    "part",
    "paragraph",
    "subparagraph",
    "text(rm|sf|tt|md|bf|up|it|sl|sc|normal)",
    "underline",
    "emph",
    "item",
    "footnote(text)?",
    "caption(of)?",
    "multicolumn",
    "href",
    "hyperref",
    "institute",
    "frametitle",
    "framesubtitle",
    "begin\\{frame\\}",
    "abstract"
  ],
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80
  },
  "plantuml.diagramsRoot": "docs/src/diagrams/src",
  "plantuml.exportOutDir": "docs/src/diagrams/out",
  "plantuml.exportSubFolder": false,
  "latex-workshop.latex.outDir": "../out",
  "[latex]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    "editor.formatOnSave": false,
    "editor.formatOnType": true
  },
  "C_Cpp.default.cppStandard": "c++17"
}
